# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# List games
GET     /games                      controllers.Application.listGames

# Add a game
GET     /newgame                    controllers.Application.getNewGame
POST    /newgame                    controllers.Application.postNewGame

# Ajax endpoints
GET    /ajax/games                  controllers.Ajax.listGames
GET    /ajax/getuser/:query         controllers.Ajax.getUser(query)

POST  /ajax/createuser              controllers.Ajax.createUser

# Run JS tests
GET    /jstest                      controllers.Application.testJavascripts
# Used for JS tests.  Resets DB if we are configured for test mode.  Otherwise returns
# blank 404.
GET    /resetDb                     controllers.Ajax.resetDb

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
